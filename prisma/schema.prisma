model receitas {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  centro     String
  data       String
  valor      Float
  referencia String?
  forma  String?
  lancamento  String?
  status String?
}



type FolhaSalarios {
  data       DateTime? @db.Date
  decimo     Float?
  ferias     Float?
  fgts       Float?
  pago       Boolean?
  sal_id     String?
  valor      Float?
  referencia String?
}



model folha {
  id         String          @id @default(auto()) @map("_id") @db.ObjectId
  conta      String
  funcao     String
  modalidade String
  nome       String
  salarios   FolhaSalarios[]
}
