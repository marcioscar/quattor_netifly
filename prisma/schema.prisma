generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ./prisma/schema.prisma
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
}

model despesas {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  conta      String
  data       DateTime
  tipo       String
  valor      Float
  referencia String?
}

